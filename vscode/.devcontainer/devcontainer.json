{
  "name": "My DevPod Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorTheme": "Tokyo Night Storm",
        "workbench.sideBar.location": "right",
        "files.autoSave": "onFocusChange",
        "editor.stickyScroll.enabled": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.useTabs": true,
        "prettier.tabWidth": 4,
        "[vue]": {
          "editor.defaultFormatter": "Vue.volar"
        },
        "vue.format.options.html.preserveNewLines": true,
        "html.format.preserveNewLines": true,
        "html.format.wrapLineLength": 0,
        "html.format.wrapAttributes": "preserve",
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        },
        "prettier.printWidth": 5000,
        "prettier.proseWrap": "never",
        "php.format.rules.spaceWithinBracketsAroundExpression": true,
        "php.format.rules.spaceWithinCallParens": true,
        "php.format.rules.spaceWithinIfParens": true,
        "php.format.rules.spaceWithinExpressionParens": true,
        "php.format.rules.chainedMethodCallsWrap": "off",
        "workbench.editor.showTabs": "single",
        "prettier.arrowParens": "avoid",
        "prettier.htmlWhitespaceSensitivity": "css",
        "files.exclude": {
          "**/vendor": true
        },
        "search.exclude": {
          "**/vendor": true
        },
        "vim.handleKeys": {
          "<C-n>": false
        },
        "explorer.compactFolders": false,
        "code-runner.runInTerminal": true,
        "code-runner.saveFileBeforeRun": true,
        "dart.flutterSdkPath": "/home/meowveloper/development/flutter",
        "RainbowBrackets.depreciation-notice": false,
        "workbench.iconTheme": "material-icon-theme",
        "workbench.editorAssociations": {
          "*.bpmn": "default"
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "editor.formatOnPaste": true,
        "editor.minimap.scale": 2,
        "editor.minimap.size": "fit",
        "codeviz.analyticsEnabled": true,
        "editor.minimap.maxColumn": 50,
        "cSpell.userWords": [
          "arsari",
          "Asari",
          "Aung",
          "AUTOINCREMENT",
          "iconify",
          "Khant",
          "manifoldco",
          "meowveloper",
          "Nuxt",
          "Postgrest",
          "Pressable",
          "supabase",
          "Timeslot",
          "timeslots"
        ],
        "editor.detectIndentation": false,
        "quokka.colors": {
          "covered": "#62b455",
          "errorPath": "#ffa0a0",
          "errorSource": "#fe536a",
          "notCovered": "#cccccc",
          "partiallyCovered": "#d2a032"
        },
        "editor.inlayHints.fontSize": 4,
        "editor.inlayHints.padding": true,
        "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
        "javascript.inlayHints.parameterTypes.enabled": true,
        "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
        "javascript.inlayHints.variableTypes.enabled": true,
        "typescript.inlayHints.enumMemberValues.enabled": true,
        "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
        "typescript.inlayHints.parameterNames.enabled": "all",
        "typescript.inlayHints.parameterTypes.enabled": true,
        "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
        "typescript.inlayHints.variableTypes.enabled": true,
        "vue.inlayHints.destructuredProps": true,
        "vue.inlayHints.missingProps": true,
        "vue.inlayHints.optionsWrapper": true,
        "vue.inlayHints.vBindShorthand": true,
        "vue.inlayHints.inlineHandlerLeading": true,
        "editor.fontFamily": "JetBrains Mono",
        "editor.fontLigatures": true,
        "workbench.preferredHighContrastColorTheme": "Visual Studio Dark - C++",
        "go.toolsManagement.autoUpdate": true,
        "docker.extension.enableComposeLanguageServer": false,
        "haskell.manageHLS": "GHCup",
        "workbench.editor.empty.hint": "hidden",
        "editor.inlayHints.enabled": "off"
      },
      "extensions": [
        "vscodevim.vim",
        "llam4u.nerdtree",
        "enkia.tokyo-night",
        "esbenp.prettier-vscode",
        "usernamehw.errorlens",
        "formulahendry.auto-rename-tag",
        "vincaslt.highlight-matching-tag",
        "tal7aouy.rainbow-bracket",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [
    3000,
    8080
  ],
  "postCreateCommand": "echo 'Dev environment ready!'"
}
